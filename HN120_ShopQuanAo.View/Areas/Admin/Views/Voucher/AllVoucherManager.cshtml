@model IEnumerable<HN120_ShopQuanAo.Data.Models.Voucher>

@{
    ViewData["Title"] = "AllVoucherManager";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            display: inline-block;
            margin-bottom: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .filters-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .input-group {
            display: flex;
            margin-right: 10px;
        }

            .input-group input,
            .input-group select {
                margin-right: 5px;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            border-radius: 0.2rem;
            text-decoration: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-outline-secondary {
            color: #6c757d;
            background-color: transparent;
            border-color: #6c757d;
        }

            .btn-outline-secondary:hover {
                color: #fff;
                background-color: #6c757d;
                border-color: #6c757d;
            }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 0.75rem;
                vertical-align: top;
                border-top: 1px solid #dee2e6;
            }

            .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #dee2e6;
            }

        .table-bordered {
            border: 1px solid #dee2e6;
        }

            .table-bordered th, .table-bordered td {
                border: 1px solid #dee2e6;
            }

        .table .thead-dark th {
            color: #fff;
            background-color: #343a40;
            border-color: #454d55;
        }

        .text-danger {
            color: red !important;
        }

        .text-success {
            color: green !important;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            line-height: 1.5;
            border-radius: 0.2rem;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            border-radius: 0.2rem;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .pagination {
            display: flex;
            justify-content: center;
            padding: 1rem 0;
        }

        .page-item {
            margin: 0 5px;
        }

        .page-link {
            color: #007bff;
            text-decoration: none;
            padding: 0.5rem 0.75rem;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
        }

            .page-link:hover {
                background-color: #e9ecef;
            }

        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

            .slider:before {
                position: absolute;
                content: "";
                height: 26px;
                width: 26px;
                border-radius: 50%;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: .4s;
            }

        input:checked + .slider {
            background-color: #2196F3;
        }

            input:checked + .slider:before {
                transform: translateX(26px);
            }

        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

            .slider:before {
                position: absolute;
                content: "";
                height: 26px;
                width: 26px;
                border-radius: 50%;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: .4s;
            }

        input:checked + .slider {
            background-color: #2196F3;
        }

            input:checked + .slider:before {
                transform: translateX(26px);
            }
    </style>
    </style>
</head>
<body>
    <div class="header">
        <h1>Quản lý Voucher</h1>
        <a asp-action="CreateVC" class="btn btn-primary">Thêm mới</a>
    </div>

    <div class="filters-container">
        <div class="input-group">
            <select class="form-control" id="statusFilter">
                <option value="">Tất cả trạng thái</option>
                <option value="SapDienRa">Sắp diễn ra</option>
                <option value="DangHoatDong">Đang hoạt động</option>
                <option value="DaKetThuc">Đã kết thúc</option>
                <option value="KetThucSom">Kết thúc sớm</option>
            </select>
            <button class="btn btn-outline-secondary" type="button" onclick="filterByStatus()">
                <i class="fa fa-filter"></i> Lọc
            </button>
        </div>
        <div class="input-group">
            <input type="date" class="form-control" id="startDate" placeholder="Ngày bắt đầu">
            <input type="date" class="form-control" id="endDate" placeholder="Ngày kết thúc">
            <button class="btn btn-outline-secondary" type="button" onclick="filterByDateRange()">
                <i class="fa fa-filter"></i> Lọc theo ngày
            </button>
        </div>

        <div class="input-group">
            <input type="text" class="form-control" placeholder="Tìm kiếm Voucher theo mã" aria-label="Tìm kiếm Voucher theo mã" aria-describedby="button-addon2" id="searchBox">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="searchVoucher()">
                <i class="fa fa-search"></i> Tìm kiếm
            </button>
        </div>
    </div>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Mã Voucher</th>
                <th>Tên Voucher</th>
                <th>Kiểu Giảm Giá</th>
                <th>Đơn giá tối thiểu</th>
                <th>Giá Giảm Tối Đa</th>
                <th>Giá Trị Giảm</th>
                <th>Ngày Bắt Đầu</th>
                <th>Ngày Kết Thúc</th>
                <th>Số Lượng</th>
                <th>Mô Tả</th>
                <th>Trạng Thái</th>
                <th>Hành Động Chung</th>
            </tr>
        </thead>
        <tbody id="voucherTableBody">
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaVoucher)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                        <td>
                            @if (item.KieuGiamGia == 0)
                            {
                                <div style="color:red">Giảm Theo Tiền Mặt</div>
                            }
                            else
                            {
                                <div style="color:green">Giảm Theo Phần Trăm</div>
                            }
                        </td>
                        <td>
                            <div>@($"{item.GiaGiamToiThieu:n0} VND")</div>
                        </td>
                        <td>
                            <div>@($"{item.GiaGiamToiDa:n0} VND")</div>
                        </td>
                        <td>
                            @if (item.KieuGiamGia == 0)
                            {
                                <div>@($"{item.GiaTriGiam:n0} VND")</div>
                            }
                            else
                            {
                                <div>@($"{item.GiaTriGiam:n0} %")</div>
                            }
                        </td>
                        <td>
                            <div style="color:green">
                                @(item.NgayBatDau.HasValue ? item.NgayBatDau.Value.ToString("dd/MM/yyyy hh:mm tt") : "N/A")
                            </div>
                        </td>
                        <td>
                            @{
                                var color = item.TrangThai == 2 || item.TrangThai == 3 ? "red" : "green";
                            }
                            <div style="color:@color">
                                @(item.NgayKetThuc.HasValue ? item.NgayKetThuc.Value.ToString("dd/MM/yyyy hh:mm tt") : "N/A")
                            </div>
                        </td>
                        <td>
                            <div>@item.SoLuong</div>
                        </td>
                        <td>
                            <div style="color:black">@item.MoTa</div>
                        </td>
                        <td>
                            @{
                                if (item.NgayKetThuc < DateTime.Now || item.SoLuong <= 0)
                                {
                                    <span class="text-danger">Đã kết thúc</span>
                                }
                                else if (item.TrangThai == 0)
                                {
                                    <span class="text-success">Sắp diễn ra</span>
                                }
                                else if (item.TrangThai == 1)
                                {
                                    <span class="text-info">Đang hoạt động</span>
                                }
                                else if (item.TrangThai == 2)
                                {
                                    <span class="text-warning">Đã kết thúc</span>
                                }
                                else if (item.TrangThai == 3)
                                {
                                    <span class="text-danger">Kết thúc sớm</span>
                                }
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "UpdateVC", new { id = item.MaVoucher }, new { @class = "btn btn-success btn-sm" })
                            @if (item.TrangThai == 1 || item.TrangThai == 3)
                            {
                                <label class="switch">
                                    <input type="checkbox" class="status-toggle" data-id="@item.MaVoucher" @(item.TrangThai == 1 ? "checked" : "")>
                                    <span class="slider"></span>
                                </label>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>
        // lọc mã
        function searchVoucher() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("searchBox");
            filter = input.value.toUpperCase().replace(/\s+/g, ' ').trim();
            table = document.getElementById("voucherTableBody");
            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    txtValue = txtValue.toUpperCase().replace(/\s+/g, ' ').trim();
                    if (txtValue.indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }

        // Lọc Trạng thái
        function filterByStatus() {
            var status = document.getElementById("statusFilter").value;
            var table = document.getElementById("voucherTableBody");
            var tr = table.getElementsByTagName("tr");

            for (var i = 0; i < tr.length; i++) {
                var td = tr[i].getElementsByTagName("td")[10];
                if (td) {
                    var statusText = td.textContent.trim();
                    if (status === "" ||
                        (status === "SapDienRa" && statusText === "Sắp diễn ra") ||
                        (status === "DangHoatDong" && statusText === "Đang hoạt động") ||
                        (status === "DaKetThuc" && statusText === "Đã kết thúc") ||
                        (status === "KetThucSom" && statusText === "Kết thúc sớm")) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
        function filterByDateRange() {
            var startDateInput = document.getElementById("startDate").value;
            var endDateInput = document.getElementById("endDate").value;
            var table = document.getElementById("voucherTableBody");
            var tr = table.getElementsByTagName("tr");

            var startDate = startDateInput ? new Date(startDateInput) : null;
            var endDate = endDateInput ? new Date(endDateInput) : null;

            for (var i = 0; i < tr.length; i++) {
                var td = tr[i].getElementsByTagName("td")[6];
                if (td) {
                    var dateText = td.textContent.trim();
                    var dateParts = dateText.split(" ");
                    var dateStr = dateParts[0];
                    var date = new Date(dateStr.split("/").reverse().join("-"));

                    if ((!startDate || date >= startDate) && (!endDate || date <= endDate)) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
        //Hàm load trạng thái
        function checkAndReloadIfMinuteChanged() {
            var currentDateTime = new Date();
            var currentMinute = currentDateTime.getMinutes();

            setTimeout(function () {
                var newDateTime = new Date();
                var newMinute = newDateTime.getMinutes();

                if (newMinute !== currentMinute) {
                    location.reload();
                } else {
                    checkAndReloadIfMinuteChanged();
                }
            }, 1000);
        }
        window.onload = function () {
            checkAndReloadIfMinuteChanged();
        };
        // Icon can gat
        $(document).ready(function () {
            $('.status-toggle').change(function () {
                var voucherId = $(this).data('id');
                var isChecked = $(this).is(':checked');
                $.ajax({
                    url: '@Url.Action("ToggleVoucherStatus", "Voucher")',
                    type: 'POST',
                    data: { id: voucherId },
                    success: function (response) {
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        console.error("Error updating voucher status:", error);
                    }
                });
            });
        });
    </script>
</body>
</html>
