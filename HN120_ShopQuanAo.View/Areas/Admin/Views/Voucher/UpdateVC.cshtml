@model HN120_ShopQuanAo.Data.Models.Voucher

@{
    ViewData["Title"] = "UpdateVC";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa Voucher</h1>

<h4>Voucher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateVC" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Mã Voucher</label>
                <input asp-for="MaVoucher" class="form-control" />
                <span asp-validation-for="MaVoucher" class="text-danger"></span>
                @*        <span class="text-danger">@ViewData["MaVoucher"]</span> *@
            </div>
            <div class="form-group">
                <label class="control-label">Tên Voucher</label>
                <input asp-for="Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger"></span>
                <span class="text-danger">@ViewData["Ten"]</span>
            </div>
            <div class="form-group">
                <label class="control-label">Gía giảm tối thiểu</label>
                <input asp-for="GiaGiamToiThieu" class="form-control" />
                <span asp-validation-for="GiaGiamToiThieu" class="text-danger"></span>
                <span class="text-danger">@ViewData["GiaGiamToiThieu"]</span>
            </div>
            <div class="form-group">
                <label class="control-label">Gía giảm tối đa</label>
                <input asp-for="GiaGiamToiDa" class="form-control" />
                <span asp-validation-for="GiaGiamToiDa" class="text-danger"></span>
                <span class="text-danger">@ViewData["GiaGiamToiDa"]</span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngày bắt đầu</label>
                <input asp-for="NgayBatDau" class="form-control" />
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                <span class="text-danger">@ViewData["NgayBatDau"]</span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngày kết thúc</label>
                <input asp-for="NgayKetThuc" class="form-control" />
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                <span class="text-danger">@ViewData["NgayKetThuc"]</span>
            </div>
            <div class="form-group">
                <label class="control-label">Kiểu giảm giá</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="kieugiamgia" value="0" asp-for="KieuGiamGia">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Tiền mặt
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="kieugiamgia" value="1" asp-for="KieuGiamGia">
                    <label class="form-check-label" for="flexRadioDefault2">
                        Phần trăm
                    </label>
                </div>
            </div>
            <span class="text-danger">@ViewData["LGG"]</span>
            <div class="form-group">
                <label class="control-label">Gía trị giảm</label>
                <input asp-for="GiaTriGiam" class="form-control" />
                <span asp-validation-for="GiaTriGiam" class="text-danger"></span>
                <span class="text-danger">@ViewData["GiaTriGiam"]</span>
            </div>
            <div class="form-group">
                <label class="control-label">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
                <span class="text-danger">@ViewData["SoLuong"]</span>
            </div>
            <div class="form-group">
                <label class="control-label">Mô tả</label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Trạng thái</label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
                <span class="text-danger">@ViewData["TrangThai"]</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sửa" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllVoucher">Quay Lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
