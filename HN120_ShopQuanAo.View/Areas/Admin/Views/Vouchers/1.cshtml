@* @model HN120_ShopQuanAo.View.PhanTrang.PhanTrangVouchers
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewData["Title"] = "GetAllVoucher";
    int stt = 1;
}

<h1 style="text-align:center"><b>Quản lý Voucher</b></h1>

<div class="col-8">
    <a class="btn btn-primary" asp-action="Create">Thêm mới</a>
</div>
<form asp-action="TimKiemMaVoucher" asp-controller="Vouchers" method="get" enctype="multipart/form-data">
    <div class="input-group">
        <input type="text" name="MaVoucher" class="form-control" placeholder="Tìm kiếm Voucher theo mã">
        <div class="input-group-append">
            <span class="input-group-text bg-transparent text-primary">
                <button type="submit" class="fa fa-search"></button>
            </span>
        </div>
    </div>
</form>
<table class="table" style="margin-left: 20px">
    <thead>
        <tr>
            <th style="background-color: darkslategray; color: white;">STT</th>
            <th style="background-color: darkslategray; color: white;">Mã Voucher</th>
            <th style="background-color: darkslategray; color: white;">Điều kiện giảm</th>
            <th style="background-color: darkslategray; color: white;">Giá giảm tối thiểu</th>
            <th style="background-color: darkslategray; color: white;">Giá giảm tối đa</th>
            <th style="background-color: darkslategray; color: white;">Ngày bắt đầu</th>
            <th style="background-color: darkslategray; color: white;">Ngày kết thúc</th>
            <th style="background-color: darkslategray; color: white;">Kiểu giảm giá</th>
            <th style="background-color: darkslategray; color: white;">Giá trị giảm</th>
            <th style="background-color: darkslategray; color: white;">Số lượng</th>
            <th style="background-color: darkslategray; color: white;">Mô tả</th>
            <th style="background-color: darkslategray; color: white;">Trạng thái</th>
            <th style="background-color: darkslategray; color: white;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listvouchers)
        {
            <tr>
                <td>
                    <strong style="color:black">@stt</strong>
                </td>
                <td>
                    @item.MaVoucher
                </td>
                <td>
                    <div style="color:green">@item.dieuKienGiam.ToString("n0") VND</div>
                </td>
                <td>
                    <div style="color:green">@item.giaGiamToiThieu.ToString("n0") VND</div>
                </td>
                <td>
                    <div style="color:green">@item.giaGiamToiDa.ToString("n0") VND</div>
                </td>
                <td>
                    <div style="color:green">@item.NgayBatDau.ToString("dd/MM/yyyy")</div>
                </td>
                <td>
                    @if (item.NgayKetThuc >= DateTime.Now)
                    {
                        <div style="color:green">@item.NgayKetThuc.ToString("dd/MM/yyyy")</div>
                    }
                    else
                    {
                        <div style="color:red">@item.NgayKetThuc.ToString("dd/MM/yyyy")</div>
                    }
                </td>
                <td>
                    @if (item.KieuGiamGia == 0)
                    {
                        <div style="color:red">Giảm theo tiền mặt</div>
                    }
                    else
                    {
                        <div style="color:green">Giảm theo phần trăm</div>
                    }
                </td>
                <td>
                    @if (item.KieuGiamGia == 0)
                    {
                        <div style="color:red">@item.giaTriGiam.ToString("n0") VND</div>
                    }
                    else
                    {
                        <div style="color:green">@item.giaTriGiam %</div>
                    }
                </td>
                <td>
                    <div style="color:red">@item.SoLuong</div>
                </td>
                <td>
                    @{
                        if (item.NgayKetThuc >= DateTime.Now && item.SoLuong > 0)
                        {
                            <div style="color:green">Còn khuyến mãi</div>
                        }
                        else
                        {
                            <div style="color:red">Hết khuyến mãi</div>
                        }
                    }
                </td>
                <td>
                    @{
                        if (item.TrangThai == 1)
                        {
                            <div style="color:green">Sử dụng</div>
                        }
                        else
                        {
                            <div style="color:red">Không sử dụng</div>
                        }
                    }
                </td>
                <td>
                    <button class="btn btn-success">
                        @Html.ActionLink("Sửa", "Update", new { id = item.Id }, new { @style = "color:white;" })
                    </button>
                    @if (item.TrangThai == 1)
                    {
                        <button class="btn btn-danger">
                            @Html.ActionLink("Không sử dụng", "Disable", new { id = item.Id }, new { @style = "color:white;" })
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-success">
                            @Html.ActionLink("Sử dụng", "Enable", new { id = item.Id }, new { @style = "color:white;" })
                        </button>
                    }
                </td>
                @{
                    stt++;
                }
            </tr>
        }
    </tbody>
</table>
<div class="col-12">
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
            {
                <li class="page-item"><a class="page-link" href="/Vouchers/GetAllVoucher?ProductPage=@i">@i</a></li>
            }
        </ul>
    </nav>
</div>
 *@


@* @model HN120_ShopQuanAo.Data.Models.Voucher

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm Voucher</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Mã Voucher</label>
                <input asp-for="MaVoucher" class="form-control" />
                <span asp-validation-for="MaVoucher" class="text-danger"></span>
                <span class="text-danger">@ViewData["Ma"]</span>

            </div>
            <div class="form-group">
                <label class="control-label">Loại giảm giá</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="hinhthucgiamgia" value="1" asp-for="KieuGiamGia">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Phần trăm
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="hinhthucgiamgia" value="0" asp-for="KieuGiamGia">
                    <label class="form-check-label" for="flexRadioDefault2">
                        Tiền mặt
                    </label>
                </div>
            </div>
            <span class="text-danger">@ViewData["LGG"]</span>
            <div class="form-group">
                <label class="control-label"> Điều kiện giảm</label>
                <input asp-for="DieuKienGiam" class="form-control" />
                <span class="text-danger">@ViewData["DieuKienGiam"]</span>
            </div>

            <div class="form-group">
                <label class="control-label"> Giá trị giảm</label>
                <input asp-for="GiaTriGiam" class="form-control" />
                <span class="text-danger">@ViewData["GiaTriGiam"]</span>
            </div>

            <div class="form-group">
                <label class="control-label"> Giá trị tối thiểu</label>
                <input asp-for="GiaGiamToiThieu" class="form-control" />
                <span class="text-danger">@ViewData["GiaGiamToiThieu"]</span>
            </div>

            <div class="form-group">
                <label class="control-label"> Giá trị tối đa</label>
                <input asp-for="GiaGiamToiDa" class="form-control" />
                <span class="text-danger">@ViewData["GiaGiamToiDa"]</span>
            </div>

            <div class="form-group">
                <label class="control-label">Ngày ap dụng</label>
                <input asp-for="NgayBatDau" class="form-control" />
                <span class="text-danger">@ViewData["NgayApDung"]</span>
            </div>
            <div class="form-group">
                <label class="control-label"> Ngày kết thúc</label>
                <input asp-for="NgayKetThuc" class="form-control" />
                <span class="text-danger">@ViewData["NgayKetThuc"]</span>
                <span class="text-danger">@ViewData["Ngay"]</span>
            </div>
            <div class="form-group">
                <label class="control-label"> Số lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span class="text-danger">@ViewData["SoLuong"]</span>
            </div>
            <div class="form-group">
                <label class="control-label">Trạng thái</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="TrangThai" value="1" asp-for="TrangThai">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Sử dụng
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="TrangThai" value="0" asp-for="TrangThai">
                    <label class="form-check-label" for="flexRadioDefault2">
                        Không sử dụng
                    </label>
                </div>
            </div>
            <span class="text-danger">@ViewData["TrangThai"]</span>
            <div class="form-group">
                <input type="submit" value="Thêm Voucher" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<br />
<button class="btn btn-primary">
    <a asp-action="GetAllVoucher" style="color:white;">Quay lại</a>
</button>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} *@


