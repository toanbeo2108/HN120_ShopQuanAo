@model HN120_ShopQuanAo.Data.Models.ChatLieu

@{
    ViewData["Title"] = "UpdateChatLieu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Update ChatLieu</h1>

@if (TempData["errorMessage"] != null)
{
            <div class="alert alert-danger">
        @TempData["errorMessage"]
            </div>
}

<form asp-action="UpdateChatLieu" method="post">
    <input type="hidden" asp-for="MaChatLieu" />
    
    <div class="form-group">
        <label asp-for="TenChatLieu" class="control-label"></label>
        <input asp-for="TenChatLieu" class="form-control" />
        <span asp-validation-for="TenChatLieu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa" class="control-label"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="AllChatLieuManager">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
