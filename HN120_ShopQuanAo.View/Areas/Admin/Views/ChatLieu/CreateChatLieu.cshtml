@model HN120_ShopQuanAo.Data.Models.ChatLieu

@{
    ViewData["Title"] = "CreateChatLieu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm Chất Liệu</h1>

@if (TempData["errorMessage"] != null)
{
            <div class="alert alert-danger">
        @TempData["errorMessage"]
            </div>
}

<form asp-action="CreateChatLieu" method="post">
    <div class="form-group">
        <label asp-for="TenChatLieu" class="control-label"></label>
        <input asp-for="TenChatLieu" class="form-control" />
        <span asp-validation-for="TenChatLieu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa" class="control-label"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="AllChatLieuManager" class="btn btn-warning">Hủy</a>

    </div>
</form>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }