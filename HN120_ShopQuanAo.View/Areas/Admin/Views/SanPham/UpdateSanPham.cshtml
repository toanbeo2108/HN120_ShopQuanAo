@using HN120_ShopQuanAo.Data.Models;
@model HN120_ShopQuanAo.Data.Models.SanPham

@{
    ViewData["Title"] = "UpdateSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    List<ThuongHieu> lstTH = ViewBag.lstTH as List<ThuongHieu>;
    List<TheLoai> lstTL = ViewBag.lstTL as List<TheLoai>;
    List<ChatLieu> lstCL = ViewBag.lstCL as List<ChatLieu>;
    var lstSZ = ViewBag.lstSZ as List<Size>;
    var lstms = ViewBag.lstms as List<MauSac>;
    var lstkm = ViewBag.lstkm as List<KhuyenMai>;
    var lstSP = ViewBag.lstSP as List<SanPham>;
    var sp = ViewBag.sp as SanPham;
    var ctsp = ViewBag.ctsp as List<ChiTietSp>;
    var existingProductNames = lstSP.Where(p => p.TenSP != sp.TenSP).Select(p => p.TenSP).ToList();
}
<style>
       .header h2 {
        margin: 0;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
    }

    .btn-primary, .btn-warning {
        margin-right: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

    .btn-warning {
        background-color: #ffc107;
        color: black;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .text-danger {
        color: red;
    }

    .container-xl {
        max-width: 800px;
        margin: 0 auto;
    }

    .card {
        margin-bottom: 20px;
    }

    .card-header {
        background-color: #f8f9fa;
        padding: 10px 15px;
        font-size: 16px;
        font-weight: bold;
    }

    .card-body {
        padding: 15px;
    }

    .card-body label {
        font-weight: bold;
    }

    .img-account-profile {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin-bottom: 10px;
    }
    .img-spdetai {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin-bottom: 10px;
    }
</style>
<div class="container-xl px-4 mt-4">
    <div class="card">
        <div class="card-body">
            <form id="updateProductForm" asp-action="UpdateSanPham" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <input asp-for="MaSp" type="hidden" />

                        <div class="form-group text-center">
                            @if (Model.UrlAvatar == null)
                            {
                                        <img class="img-account-profile" src="~/photoSP/default.png" alt="Product Image" />
                            }
                            else
                            {
                                        <img class="img-account-profile" src="~/photoSP/@Model.UrlAvatar" alt="Product Image" />
                            }
                        </div>

                        <input type="file" class="form-control" name="imageFile" id="productImageFile" />

                        <div class="form-group">
                            <label asp-for="TenSP" class="control-label">Tên sản phẩm</label>
                            <input asp-for="TenSP" id="tensp_inp" class="form-control" />
                            <span asp-validation-for="TenSP" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mota" class="control-label">Mô tả</label>
                            <input asp-for="Mota" class="form-control" />
                            <span asp-validation-for="Mota" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="MaThuongHieu" class="control-label">Thương hiệu</label>
                            <select class="form-select" id="thuonghieu_in" asp-for="MaThuongHieu" aria-label="Default select example">
                                <option value=""></option>
                                @foreach (ThuongHieu item in lstTH)
                                {
                                            <option value="@item.MaThuongHieu">@item.TenThuongHieu</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaTheLoai" class="control-label">Thể loại</label>
                            <select class="form-select" id="theloai_in" asp-for="MaTheLoai" aria-label="Default select example">
                                <option value=""></option>
                                @foreach (TheLoai item in lstTL)
                                {
                                            <option value="@item.MaTheLoai">@item.TenTheLoai</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="MaChatLieu" class="control-label">Chất liệu</label>
                            <select class="form-select" id="chatlieu_in" asp-for="MaChatLieu" aria-label="Default select example">
                                <option value=""></option>
                                @foreach (ChatLieu item in lstCL)
                                {
                                            <option value="@item.MaChatLieu">@item.TenChatLieu</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="TrangThai" class="control-label">Trạng thái:</label>
                            @if (sp.TrangThai == 0)
                            {
                                        <span>Không hoạt động</span>
                            }
                            else if (sp.TrangThai == 1)
                            {
                                        <span>Hoạt động</span>
                            }
                        </div>
                        <div class="form-group">
                            <button type="button" id="submitProductForm" class="btn btn-primary">Sửa</button>
                            <a asp-action="AllSanPhamManager" class="btn btn-warning">Sản Phẩm</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<h1>Chi tiết</h1>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Size</th>
            <th>Màu</th>
            <th>Ảnh</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in ctsp)
        {
                    <form id="updateChiTietSpForm-@item.SKU" asp-action="UpdateChiTietSp" asp-controller="ChiTietSP" method="post" enctype="multipart/form-data">
                        <tr>
                            <td>@i</td>
                            <input name="SKU" type="hidden" value="@item.SKU">
                            <input name="MaSp" type="hidden" value="@item.MaSp">
                            <td>
                        @{
                            var size = lstSZ.FirstOrDefault(th => th.MaSize == item.MaSize)?.TenSize ?? "Lỗi Hiển Thị";
                        }
                        @size
                            </td>
                            <td>
                        @{
                            var mau = lstms.FirstOrDefault(th => th.MaMau == item.MaMau)?.TenMau ?? "Lỗi Hiển Thị";
                        }
                        @mau
                            </td>
                            <td>
                                <div class="form-group text-center">
                            @if (item.UrlAnhSpct == null)
                            {
                                                <img class="img-spdetai" src="~/photoSanPhamCT/default.png" alt="Product Detail Image" />
                            }
                            else
                            {
                                                <img class="img-spdetai" src="~/photoSanPhamCT/@item.UrlAnhSpct" alt="Product Detail Image" />
                            }
                                </div>
                                <input type="file" class="form-control" name="imagectspFile" id="productdetailImageFile" />
                            </td>
                            <td>
                        @{
                            var formattedDonGia = item.DonGia % 1 == 0 ? $"{item.DonGia:0}" : $"{item.DonGia:0.00}";
                        }
                                <input type="number" name="DonGia" id="dongia_in" class="form-control" value="@formattedDonGia" required min="0" max="900000000" onblur="checkDonGia(this)" />
                            </td>
                            <td>
                                    <input type="number" name="SoLuongTon" id="soluong_in" class="form-control" value="@item.SoLuongTon" required min="0" max="999" onblur="checkSoLuongTon(this)" />
                            </td>
                            <td>
                        @if (item.TrangThai == 0)
                        {
                                            <span>Không hoạt động</span>
                        }
                        else if (item.TrangThai == 1)
                        {
                                            <span>Hoạt động</span>
                        }
                            </td>
                            <td style="text-align: center;">
                                <button type="button" class="btn btn-primary suact" data-sku="@item.SKU">Sửa</button>
                            </td>
                        </tr>
                    </form>
            i++;
        }
    </tbody>
</table>

<!-- Modal confirm -->
<div id="confirmModal" class="modal fade" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="editsp" style="display: none;">Bạn có chắc chắn muốn sửa sản phẩm này không?</p>
                <p class="editct" style="display: none;">Bạn có chắc chắn muốn sửa chi tiết này không?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                <button type="button" class="btn btn-primary" id="confirmSubmit">Có</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
            <script>
                    function checkSoLuongTon(input) {
                    if(input.value == ''){
                        input.value = 1;
                    }
                    else if (input.value > 999) {
                        input.value = 999;
                    } else if (input.value < 0) {
                        input.value = 1;
                    }
                    }
                    function checkDonGia(input) {
                            if(input.value == ''){
                                input.value = 1000;
                            }
                                else if (input.value > 900000000) {
                                    input.value = 900000000;
                            } else if (input.value < 0) {
                                input.value = 1000;
                            }
                    }
                $(document).ready(function () {
                        $('#productImageFile').change(function (e) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $('.img-account-profile').attr('src', e.target.result);
                        }
                        reader.readAsDataURL(e.target.files[0]);
                    });
                    $('input[type="file"][id="productdetailImageFile"]').change(function (e) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $(e.target).closest('tr').find('.img-spdetai').attr('src', e.target.result);
                        }
                        reader.readAsDataURL(e.target.files[0]);
                    });

                    var checktensp = @Html.Raw(Json.Serialize(existingProductNames));

                    $('#submitProductForm').on('click', function () {
                        var isValid = true;
                        var tensp = $('#tensp_inp').val();

                        if ($('#tensp_inp').val().trim() === "") {
                            isValid = false;
                            alert('Vui lòng nhập tên sản phẩm.');
                        }

                        if (checktensp.includes(tensp)) {
                            alert('Tên sản phẩm đã tồn tại. Vui lòng chọn tên khác.');
                            isValid = false;
                        }

                        if ($('#thuonghieu_in').val() === "") {
                            isValid = false;
                            alert('Vui lòng chọn thương hiệu.');
                        }

                        if ($('#theloai_in').val() === "") {
                            isValid = false;
                            alert('Vui lòng chọn thể loại.');
                        }

                        if ($('#chatlieu_in').val() === "") {
                            isValid = false;
                            alert('Vui lòng chọn chất liệu.');
                        }

                        if (isValid) {
                            $('.editsp').show();
                            $('.editct').hide();
                            $('#confirmModal').modal('show');
                        }
                    });

                        $('.suact').on('click', function () {
                        var sku = $(this).data('sku');
                        var form = $('#updateChiTietSpForm-' + sku);
                        var isValid = true;

                        form.find('input').each(function () {
                            if ($(this).val().trim() === "") {
                                isValid = false;
                                alert('Vui lòng nhập đầy đủ thông tin chi tiết sản phẩm.');
                            }
                        });

                        if (isValid) {
                            $('.editsp').hide();
                            $('.editct').show();
                            $('#confirmModal').modal('show');
                            $('#confirmSubmit').data('sku', sku);
                        }
                    });

                    $('#confirmSubmit').on('click', function () {
                        var sku = $(this).data('sku');
                        if (sku) {
                            $('#updateChiTietSpForm-' + sku).submit();
                        } else {
                            $('#updateProductForm').submit();
                        }
                    });
                });
            </script>
}
