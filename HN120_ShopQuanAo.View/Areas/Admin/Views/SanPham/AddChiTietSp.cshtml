
﻿@using HN120_ShopQuanAo.Data.ViewModels
@model AddChiTietSpViewModel

@{
    ViewData["Title"] = "Thêm Chi Tiết Sản Phẩm";
}

<h1>Thêm Chi Tiết Sản Phẩm</h1>


<form asp-action="AddChiTietSp" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MaSp" />

    <div class="form-group">
        <label>Chọn Size:</label>
        <div>

            @for (int i = 0; i < ViewBag.lstSZ.Count; i++)
            {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedSizes" value="@ViewBag.lstSZ[i].MaSize" 
                           @(Model.SelectedSizes != null && Model.SelectedSizes.Contains(ViewBag.lstSZ[i].MaSize) ? "checked" : "") />
                        <label class="form-check-label" for="Size_@ViewBag.lstSZ[i].MaSize">@ViewBag.lstSZ[i].TenSize</label>
                    </div>

            }
        </div>
    </div>


    <div class="form-group">
        <label>Chọn Màu:</label>
        <div>
            @for (int i = 0; i < ViewBag.lstms.Count; i++)
            {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedMaus" value="@ViewBag.lstms[i].MaMau" 
                           @(Model.SelectedMaus != null && Model.SelectedMaus.Contains(ViewBag.lstms[i].MaMau) ? "checked" : "") />
                        <label class="form-check-label" for="Mau_@ViewBag.lstms[i].MaMau">@ViewBag.lstms[i].TenMau</label>
                    </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Thêm Chi Tiết Sản Phẩm</button>
</form>

