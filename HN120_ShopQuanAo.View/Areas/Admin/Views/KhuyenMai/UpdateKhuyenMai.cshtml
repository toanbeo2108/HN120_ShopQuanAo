@model HN120_ShopQuanAo.Data.Models.KhuyenMai

@{
    ViewData["Title"] = "UpdateKhuyenMai";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h1>Sửa Khuyến Mại</h1>

@if (TempData["errorMessage"] != null)
{
                <div class="alert alert-danger">
        @TempData["errorMessage"]
                </div>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateKhuyenMai">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaKhuyenMai" />
            
            <div class="form-group">

                <label asp-for="TenKhuyenMai" class="control-label">Tên Khuyến Mại</label>

                <input asp-for="TenKhuyenMai" class="form-control" />
                <span asp-validation-for="TenKhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhanTramGiam" class="control-label">Phần Trăm Giảm</label>
                <input asp-for="PhanTramGiam" class="form-control" />
                <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Sửa" class="btn btn-primary" />
    <a asp-action="AllKhuyenMaiManager" class="btn btn-warning">Hủy</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
