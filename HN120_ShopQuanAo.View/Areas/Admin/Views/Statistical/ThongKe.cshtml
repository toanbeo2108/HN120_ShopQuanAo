@using Newtonsoft.Json;
@using HN120_ShopQuanAo.Data.Models;
@model HN120_ShopQuanAo.View.Areas.Admin.Models.ThongKeViewModel

@{
    ViewData["Title"] = "ThongKe";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var listSanPham = ViewBag.ListSanPham as List<SanPham>;
    var listCTSanPham = ViewBag.ListCTSanPham as List<ChiTietSp>;
}
<div class="container">
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Doanh thu hôm nay</h5>
                    <p class="card-text">@String.Format("{0:N0}vnđ", Model.TongDoanhThu)</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Số lượng sản phẩm bán hôm nay</h5>
                    <p class="card-text">@Model.SoLuongSanPham</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Số lượng hóa đơn hôm nay</h5>
                    <p class="card-text">@Model.SoLuongHoaDon</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <a asp-controller="Statistical" asp-action="ThongKeChiTiet">
            <div class="col-md-12">
                <h3>Doanh thu 7 ngày gần nhất</h3>
                <canvas id="revenue7DaysChart"></canvas>
            </div>
        </a>
    </div>

    

    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Top sản phẩm bán chạy hôm nay</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Tổng số lượng bán</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.TopSanPhamBanChay != null && Model.TopSanPhamBanChay.Any())
                    {
                        foreach (var product in Model.TopSanPhamBanChay)
                        {
                            <tr>
                                <td>@product.TenSP</td>
                                <td>@String.Format("{0:N0}vnđ", product.DonGia)</td>
                                <td>@product.TotalQuantity</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            @if (Model.SanPhamSapHetHang != null && Model.SanPhamSapHetHang.Any())
            {
                <h3>Sản phẩm sắp hết hàng</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Giá bán</th>
                            <th>Số lượng tồn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.SanPhamSapHetHang)
                        {
                            <tr>
                                <td>@product.TenSP</td>
                                <td>@String.Format("{0:N0}vnđ", product.GiaBan)</td>
                                <td>@product.SoLuongTon</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    <strong>Thông báo:</strong> Không có sản phẩm sắp hết hàng.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const revenue7DaysChartCtx = document.getElementById('revenue7DaysChart').getContext('2d');

        // Dữ liệu biểu đồ doanh thu 7 ngày gần nhất
        const revenue7DaysData = {
            labels: @Html.Raw(JsonConvert.SerializeObject(Model.DoanhThuTheoNgay.Select(d => d.Ngay.ToString("dd-MM-yyyy")).ToList())),
            datasets: [{
                label: 'Doanh thu',
                data: @Html.Raw(JsonConvert.SerializeObject(Model.DoanhThuTheoNgay.Select(d => d.DoanhThu).ToList())),
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        };

        // Tạo biểu đồ doanh thu 7 ngày gần nhất (dạng cột)
        new Chart(revenue7DaysChartCtx, {
            type: 'bar',
            data: revenue7DaysData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}
