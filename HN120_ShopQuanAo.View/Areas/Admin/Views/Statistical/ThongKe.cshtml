@model HN120_ShopQuanAo.View.Areas.Admin.Models.ThongKeViewModel

@{
    ViewData["Title"] = "ThongKe";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Doanh thu hôm nay</h5>
                    <p class="card-text">@Model.TongDoanhThu.ToString("C")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Số lượng sản phẩm bán hôm nay</h5>
                    <p class="card-text">@Model.SoLuongSanPham</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Số lượng hóa đơn hôm nay</h5>
                    <p class="card-text">@Model.SoLuongHoaDon</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Biểu đồ doanh thu và số lượng bán</h3>
            <div>
                <canvas id="revenueChart"></canvas>
            </div>
            <div>
                <canvas id="quantityChart"></canvas>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Sản phẩm sắp hết hàng</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>SKU</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Số lượng tồn</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.SanPhamSapHetHang != null)
                    {
                        @foreach (var product in Model.SanPhamSapHetHang)
                        {
                            <tr>
                                <td>@product.SKU</td>
                                <td>@product.TenSP</td>
                                <td>@product.GiaBan.ToString("C")</td>
                                <td>@product.SoLuongTon</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có dữ liệu</td>
                        </tr>
                    }
                   
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Top sản phẩm bán chạy hôm nay</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>SKU</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Tổng số lượng bán</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.TopSanPhamBanChay != null)
                    {
                        foreach (var product in Model.TopSanPhamBanChay)
                        {
                            <tr>
                                <td>@product.SKU</td>
                                <td>@product.TenSP</td>
                                <td>@product.GiaBan.ToString("C")</td>
                                <td>@product.TotalQuantity</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const revenueChartCtx = document.getElementById('revenueChart').getContext('2d');
        const quantityChartCtx = document.getElementById('quantityChart').getContext('2d');

        // Dữ liệu biểu đồ doanh thu (ví dụ mẫu)
        const revenueData = {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
            datasets: [{
                label: 'Doanh thu',
                data: [12000, 19000, 3000, 5000, 2000, 3000, 4500],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        };

        // Dữ liệu biểu đồ số lượng bán (ví dụ mẫu)
        const quantityData = {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
            datasets: [{
                label: 'Số lượng bán',
                data: [150, 200, 180, 220, 160, 170, 210],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        };

        // Tạo biểu đồ doanh thu
        new Chart(revenueChartCtx, {
            type: 'line',
            data: revenueData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Tạo biểu đồ số lượng bán
        new Chart(quantityChartCtx, {
            type: 'line',
            data: quantityData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}

