                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
                <td style="text-align : center; margin-bottom : 20px">
                <a asp-action="TheLoaiDetail" asp-controller="TheLoai" asp-area="Admin" class="btn btn-primary" asp-route-idbookrt="@item.MaTheLoai">Chi Tiết</a>
                <a asp-action="UpdateTheLoai" asp-controller="TheLoai" asp-area="Admin" class="btn btn-primary" asp-route-idbookrt="@item.MaTheLoai">Sửa</a>    

                </td>
        </tr>
}
