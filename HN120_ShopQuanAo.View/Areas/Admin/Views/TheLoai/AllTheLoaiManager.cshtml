@model IEnumerable<HN120_ShopQuanAo.Data.Models.TheLoai>

@{
    ViewData["Title"] = "AllTheLoaiManager";
}

<h1>AllTheLoaiManager</h1>

<p>
    <a asp-action="CreateTheLoai">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
