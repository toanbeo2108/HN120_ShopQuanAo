@model HN120_ShopQuanAo.Data.Models.ThuongHieu

@{
    ViewData["Title"] = "Update ThuongHieu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}

<h1>Update ThuongHieu</h1>

@if (ViewData["ErrorMessage"] != null)
{
            <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
            </div>
}

<form asp-action="UpdateThuongHieu" method="post">
    <input type="hidden" asp-for="MaThuongHieu" />
    <div class="form-group">
        <label asp-for="TenThuongHieu"></label>
        <input asp-for="TenThuongHieu" class="form-control" />
        <span asp-validation-for="TenThuongHieu" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoTa"></label>
        <input asp-for="MoTa" class="form-control" />
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
