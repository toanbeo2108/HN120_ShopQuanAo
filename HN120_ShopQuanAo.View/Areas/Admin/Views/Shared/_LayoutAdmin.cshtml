                            <li class="btn_fm_danhsachcd btn_li">
                                <img class="listy_dw" src="./Images/icon-liststyle.svg" alt="">
                                <img class="listy_hv" src="./Images/icon-liststyle-hv.svg" alt="">
                                <a href="#">Giảm giá sản phẩm </a>
                            </li>
                        </ul>
                    </li>
                    <li class="can_hv">
                        <button class="row_menu accordion btnc">
                            <img src="./Images/icons8-warning-50.png" alt="" class="icon_dark_click icon_ward">
