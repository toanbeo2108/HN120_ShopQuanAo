@model HN120_ShopQuanAo.Data.Models.Size

@{
    ViewData["Title"] = "CreateSize";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm Size</h1>

<h4>Size</h4>
@if (TempData["errorMessage"] != null)
{
                        <div class="alert alert-danger">
        @TempData["errorMessage"]
                        </div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSize">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="TenSize" class="control-label">Tên Size</label>
                <input asp-for="TenSize" class="form-control" />
                <span asp-validation-for="TenSize" class="text-danger">Mô Tả</span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
    <a asp-action="AllSizeManager" class="btn btn-warning">Hủy</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
