@model IEnumerable<HN120_ShopQuanAo.Data.Models.VoucherHistory>

@{
    ViewData["Title"] = "AllVoucherHManager";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            display: inline-block;
            margin-bottom: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .filters-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .input-group {
            display: flex;
            margin-right: 10px;
        }

            .input-group input,
            .input-group select {
                margin-right: 5px;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            border-radius: 0.2rem;
            text-decoration: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-outline-secondary {
            color: #6c757d;
            background-color: transparent;
            border-color: #6c757d;
        }

            .btn-outline-secondary:hover {
                color: #fff;
                background-color: #6c757d;
                border-color: #6c757d;
            }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 0.75rem;
                vertical-align: top;
                border-top: 1px solid #dee2e6;
            }

            .table thead th {
                vertical-align: bottom;
                border-bottom: 2px solid #dee2e6;
            }

        .table-bordered {
            border: 1px solid #dee2e6;
        }

            .table-bordered th, .table-bordered td {
                border: 1px solid #dee2e6;
            }

        .table .thead-dark th {
            color: #fff;
            background-color: #343a40;
            border-color: #454d55;
        }

        .text-danger {
            color: red !important;
        }

        .text-success {
            color: green !important;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            line-height: 1.5;
            border-radius: 0.2rem;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            border-radius: 0.2rem;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .pagination {
            display: flex;
            justify-content: center;
            padding: 1rem 0;
        }

        .page-item {
            margin: 0 5px;
        }

        .page-link {
            color: #007bff;
            text-decoration: none;
            padding: 0.5rem 0.75rem;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
        }

            .page-link:hover {
                background-color: #e9ecef;
            }
    </style>
</head>
<body>
    <div class="header">
        <h1>Lịch Sử Voucher</h1>
    </div>



    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Mã Voucher</th>
                @*             <th>Tên Voucher</th> *@
                <th>Ngày Tạo</th>
                <th>Ngày Thay Đổi</th>
                <th>Kiểu Giảm Giá</th>
                <th>Đơn giá tối thiểu</th>
                @*             <th>Giá Giảm Tối Đa</th> *@
                <th>Giá Trị Giảm</th>
                <th>Ngày Bắt Đầu</th>
                <th>Ngày Kết Thúc</th>
                @*             <th>Số Lượng</th>
                <th>Mô Tả</th> *@
                <th>Trạng Thái</th>
            </tr>
        </thead>
        <tbody id="voucherTableBody">
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaVoucher)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgayTao)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgayThayDoi)</td>
                        <td>
                            @if (item.KieuGiamGia == 0)
                            {
                                <div style="color:red">Giảm Theo Tiền Mặt</div>
                            }
                            else
                            {
                                <div style="color:green">Giảm Theo Phần Trăm</div>
                            }
                        </td>
                        <td>
                            <div>@($"{item.GiaGiamToiThieu:n0} VND")</div>
                        </td>
                        <td>
                            @if (item.KieuGiamGia == 0)
                            {
                                <div>@($"{item.GiaTriGiam:n0} VND")</div>
                            }
                            else
                            {
                                <div>@($"{item.GiaTriGiam:n0} %")</div>
                            }
                        </td>
                        <td>
                            <div style="color:green">@item.NgayBatDau</div>
                        </td>
                        <td>
                            @if (item.NgayKetThuc >= DateTime.Now)
                            {
                                <div style="color:green">@item.NgayKetThuc</div>
                            }
                            else
                            {
                                <div style="color:red">@item.NgayKetThuc</div>
                            }
                        </td>
                        <td>
                            @{

                                if (item.TrangThai == 0)
                                {
                                    <span class="text-success">Sắp diễn ra</span>
                                }
                                else if (item.TrangThai == 1)
                                {
                                    <span class="text-info">Đang hoạt động</span>
                                }
                                else if (item.TrangThai == 2)
                                {
                                    <span class="text-warning">Đã kết thúc</span>
                                }
                                else if (item.TrangThai == 3)
                                {
                                    <span class="text-warning">Kết thúc sớm</span>
                                }
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <script>
     //
    </script>
</body>
</html>