@model HN120_ShopQuanAo.Data.ViewModels.LoginUser;
<link rel="stylesheet" href="~/src/assets/css/styles.min.css" />
@* 
<!--  Body Wrapper -->
<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-8 col-lg-6 col-xxl-3">
                    <div class="card mb-0">
                        <div class="card-body">
                            <a asp-action="Index" asp-controller="Home" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                <img src="~/src/assets/images/logos/dark-logo.svg" width="180" alt="">
                            </a>
                            <p class="text-center">Your Social Campaigns</p>
                            <form asp-controller="Home" asp-action="Login">
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">PhoneNumber</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="PhoneNumber">
                                </div>
                                <div class="mb-4">
                                    <label for="exampleInputPassword1" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password">
                                </div>
                                <div class="d-flex align-items-center justify-content-between mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input primary" type="checkbox" value="" id="flexCheckChecked" checked>
                                        <label class="form-check-label text-dark" for="flexCheckChecked">
                                            Remeber this Device
                                        </label>
                                    </div>
                                    <a class="text-primary fw-bold" href="./index.html">Forgot Password ?</a>
                                </div>
                                <a href="./index.html" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Sign In</a>
                                <div class="d-flex align-items-center justify-content-center">
                                    <p class="fs-4 mb-0 fw-bold">New to Modernize?</p>
                                    <a class="text-primary fw-bold ms-2" href="./authentication-register.html">Create an account</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/src/assets/libs/jquery/dist/jquery.min.js"></script>
<script src="~/src/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@

<hr />

<div class="customer_login container">
    <div class="row">
        <!--login area start-->
        <div class="col-lg-6 col-md-6">
            <div class="account_form">
                <h2>login</h2>
                <form asp-controller="Home" asp-action="Login">
                    <p>
                        <label>PhoneNumber or Email <span>*</span></label>
                        <input type="text" required asp-for="PhoneNumber">
                    </p>
                    <p>
                        <label>Passwords <span>*</span></label>
                        <input type="password" required asp-for="Password">
                    </p>
                    <div class="login_submit">
                        <button type="submit">login</button>
                        <a href="#">Lost your password?</a>
                    </div>
                </form>

            </div>
            <!--login area end-->
        </div>
    </div>
</div>

<style>
    body {
        background: url('path_to_your_background_image.jpg') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .customer_login_wrapper {
        display: flex;
        justify-content: center;
        align-items: flex-start; /* Align to the top */
        min-height: calc(50vh - 90px); /* Chiều cao 100% của viewport trừ đi chiều cao của thanh điều hướng */
        padding: 20px;
        padding-top: 20px; /* Khoảng cách từ trên xuống */
    }

    .customer_login {
        width: 100%;
        max-width: 800px; /* Đặt chiều rộng tối đa lớn hơn cho form */
        padding: 40px; /* Thêm padding lớn hơn */
        box-shadow: 0 0 10px rgba(0,0,0,0.1); /* Thêm bóng đổ để làm nổi bật form */
        background: rgba(255, 255, 255, 0.9); /* Đặt nền trắng và thêm độ trong suốt cho form */
        border-radius: 10px; /* Bo tròn góc cho form */
    }

    .account_form {
        width: 100%;
    }

        .account_form h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .account_form form p {
            margin-bottom: 20px;
        }

    .login_submit {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .login_submit button {
            background-color: #000;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }

        .login_submit a {
            color: #007bff;
            text-decoration: none;
        }
</style>
