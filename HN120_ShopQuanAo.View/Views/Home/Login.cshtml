@model HN120_ShopQuanAo.Data.ViewModels.LoginUser;
<hr />
<div class="customer_login container">
    <div class="row">
        <!--login area start-->
        <div class="col-lg-6 col-md-6">
            <div class="account_form">
                <h2>login</h2>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">@ViewBag.Message</div>
                }
                <form asp-controller="Home" asp-action="Login">
                    <p>
                        <label>PhoneNumber<span>*</span></label>
                        <input type="text" required asp-for="PhoneNumber">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </p>
                    <p>
                        <label>Passwords <span>*</span></label>
                        <input type="password" required asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </p>
                    <div class="login_submit">
                        <button type="submit">login</button>
                        <a class="text-primary fw-bold ms-2" asp-controller="Home" asp-action="Register">Create an account</a>
                    </div>
                </form>
            </div>
        </div>
        <!--login area end-->
    </div>
</div>

